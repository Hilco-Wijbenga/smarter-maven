<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                        http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.cavebeetle</groupId>
        <artifactId>parent-java-pom</artifactId>
        <version>1</version>
        <relativePath>../poms/parent-java-pom</relativePath>
    </parent>

    <groupId>org.cavebeetle.maven</groupId>
    <artifactId>smarter-maven-extension</artifactId>
    <version>1.0</version>

    <name>Smarter Maven Extension</name>

    <dependencies>

        <!-- Scope 'compile' -->
        <dependency>
            <groupId>org.cavebeetle.guice</groupId>
            <artifactId>guice-api</artifactId>
            <version>${guice-api.version}</version>
        </dependency>

        <dependency>
            <groupId>org.cavebeetle.io</groupId>
            <artifactId>io-api</artifactId>
            <version>${io-api.version}</version>
        </dependency>

        <dependency>
            <groupId>org.cavebeetle.maven</groupId>
            <artifactId>maven-api</artifactId>
            <version>${maven-api.version}</version>
        </dependency>

        <!-- Scope 'provided' -->
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-compat</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-core</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Scope 'runtime' -->
        <dependency>
            <groupId>org.cavebeetle.io</groupId>
            <artifactId>io-impl</artifactId>
            <version>${io-impl.version}</version>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>org.cavebeetle.maven</groupId>
            <artifactId>maven-impl</artifactId>
            <version>${maven-impl.version}</version>
            <scope>runtime</scope>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>

                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>

                <executions>

                    <execution>
                        <id>version-template</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy todir="${project.build.directory}/generated-sources/java/">
                                    <fileset dir="src/main/templates/"/>
                                    <globmapper
                                        from="*.java.template"
                                        to="*.java"/>
                                    <filterset>
                                        <filter
                                            token="VERSION"
                                            value="${project.version}"/>
                                    </filterset>
                                </copy>
                            </target>
                        </configuration>
                    </execution>

                </executions>

            </plugin>

            <plugin>

                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>

                <executions>

                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/java</source>
                            </sources>
                        </configuration>
                    </execution>

                </executions>

            </plugin>

            <plugin>

                <groupId>org.codehaus.plexus</groupId>
                <artifactId>plexus-component-metadata</artifactId>

                <executions>

                    <execution>
                        <goals>
                            <goal>generate-metadata</goal>
                            <goal>generate-test-metadata</goal>
                        </goals>
                    </execution>

                </executions>

            </plugin>

        </plugins>

    </build>

</project>
